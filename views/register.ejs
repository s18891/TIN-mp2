<%- include('./fragments/header.ejs') %>

<div id="prawy">
    <div id="lewy_srodek">
        <h2>Rejestracja</h2>

        <form method="POST">
            <div>
                Login: <input type="text" name="login" value="<%= auth.login %>" />
                <%= validationErrors.length && validationErrors.find(err => err.path === 'login') ? validationErrors.find(err => err.path === 'login').message : '' %>
                <%= validationErrors.length && validationErrors.find(err => err.message === 'Users.login must be unique') ? "Podany login jest już używany" : '' %>
            </div>
            <div>
                E-mail: <input type="text" name="email" value="<%= auth.email %>" />
                <%= validationErrors.length && validationErrors.find(err => err.path === 'email') ? validationErrors.find(err => err.path === 'email').message : '' %>
                <%= validationErrors.length && validationErrors.find(err => err.type === 'Users.email must be unique') ? "Podany email jest już używany" : '' %>
            </div>
            <div>
                Hasło: <input type="password" name="password" />
                <%= validationErrors.length && validationErrors.find(err => err.path === 'password') ? validationErrors.find(err => err.path === 'password').message : '' %>
            </div>
            <div>
                <input type="submit" value="Zarejestruj" />
            </div>
        </form>
    </div>
</div>


<%- include('./fragments/footer.ejs') %>
