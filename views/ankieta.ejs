<%- include('./fragments/header.ejs') %>


<div id="prawy">
				<br id="lewy_srodek">
				
					<h2>Nowa Rezerwacja</h2>

					<form method="POST" novalidate onsubmit="return validateFormRezerwacje();">
						<div id="formularz">
						<label for="koncerty">Wybierz koncert:</label>
						<select id="koncerty" name="koncerty">
							<% for (let koncert of allKoncerty) { %>
								<option value="<%= koncert._IdKoncertu %>"><%= koncert.Miejsce_koncertu %> - <%= koncert.Data_koncertu.toLocaleString() %></option>
							<% }%>
						</select><br /> <br />
						Podaj ilość osób: * <input type="number" id="ilosc" name="ilosc"
							   min="1" max="20" placeholder="2"> <br /><br />
						Czy chcesz dokonać przedpłaty: *
							<input type="radio" name="przedpłata" value="1" />Tak
							<input type="radio" name="przedpłata" value="0" />Nie <br /><br />

						W jaki sposób dowiedziałeś się o koncercie?
						<select name="Przeglądarka">
							<option selected="selected">Facebook</option>
							<option>Radio</option>
							<option>Od znajomych</option>
							<option>Plakat</option>
							<option>Inna</option>
						</select>
							<p>Dodatkowe informacje:</p>
							<textarea name="Komentarz" cols="50" rows="10">Tutaj można wpisać dodatkowe informacje dotyczące rezerwacji...</textarea>
						<br /><br />
						<input type="submit" value="Dodaj rezerwacje" />
						<input type="reset" value="Wyczyść dane" />
					</div></form>
				</br>
					<a href="/rezerwacje">
						<button>Powrót do rezerwacji</button>
					</a>
				</div>
				

			</div>

<%- include('./fragments/footer.ejs') %>
